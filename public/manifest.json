{
  "manifest_version": 3,
  "name": "MarketMate",
  "version": "0.1.0",
  "description": "Automate price negotiation on Facebook Marketplace",
  "permissions": ["storage", "activeTab"],
  "host_permissions": [
    "https://www.facebook.com/*",
    "https://www.messenger.com/*"
  ],
  "background": {
    "service_worker": "src/background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.facebook.com/marketplace/*"],
      "js": ["src/content/index.js"],
      "css": ["src/styles/panel.css"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.messenger.com/*"],
      "js": ["src/messenger/index.js"],
      "css": ["src/styles/messenger.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/marketmateLogo.png",
      "48": "icons/marketmateLogo.png",
      "128": "icons/marketmateLogo.png"
    }
  },
  "icons": {
    "16": "icons/marketmateLogo.png",
    "48": "icons/marketmateLogo.png",
    "128": "icons/marketmateLogo.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["src/*", "icons/*"],
      "matches": ["https://www.facebook.com/*", "https://www.messenger.com/*"]
    }
  ]
}
